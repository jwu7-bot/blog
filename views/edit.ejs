<%- include("partials/header") %>

<h1>Edit Post</h1>
<form action="/edit/<%= post.title.toLowerCase().split(' ').join('-') %>" method="POST">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" name="postTitle" class="form-control" value="<%= post.title %>" required />
  </div>
  <div class="mb-3">
    <label class="form-label">Content</label>
    <textarea name="postBody" class="form-control" rows="6" required><%= post.content %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<%- include("partials/footer") %>
