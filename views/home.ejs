<%- include("partials/header") %>

<h1 class="mb-4">My Blog Posts</h1>

<% if (posts.length === 0) { %>
  <p>No posts yet. <a href="/compose">Create one here.</a></p>
<% } else { %>
  <% posts.forEach(post => { %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h3><a href="/posts/<%= post.title.toLowerCase().split(' ').join('-') %>" class="text-dark text-decoration-none"><%= post.title %></a></h3>
        <p><%= post.content.substring(0, 150) %>...</p>
        <a href="/posts/<%= post.title.toLowerCase().split(' ').join('-') %>" class="btn btn-outline-primary btn-sm">Read More</a>
      </div>
    </div>
  <% }) %>
<% } %>

<%- include("partials/footer") %>
